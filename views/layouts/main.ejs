<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Hospital DBMS</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/img/favicon.png">
</head>
<body class="bg-light">
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">
        <i class="fas fa-database me-2"></i>
        Hospital 
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if(user) { %>
            <% if(user.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/admin/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/users">Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/databases">Databases</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/payments">Payments</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/commissions">Commissions</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/reports">Reports</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/executive/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/database/list">My Databases</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/payment/history">Payment History</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/executive/commissions">Commissions</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/executive/referrals">Referrals</a>
              </li>
            <% } %>
          <% } %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if(user) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-user-circle me-1"></i> <%= user.fullName %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <% if(user.role === 'executive') { %>
                  <li><a class="dropdown-item" href="/executive/profile"><i class="fas fa-id-card me-2"></i>My Profile</a></li>
                <% } %>
                <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container mt-3">
    <% if(success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if(error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if(error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>

  <!-- Main Content -->
  <main class="container py-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="bg-dark text-light py-4 mt-5">
    <div class="container">
      
      <div class="row">
        <div class="col-md-6">
          <p class="mb-0">&copy; <%= new Date().getFullYear() %> Hospital DBMS. All rights reserved.</p>
        </div>
        <div class="col-md-6 text-md-end">
          <a href="#" class="text-decoration-none text-white me-3">Privacy Policy</a>
          <a href="#" class="text-decoration-none text-white">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Custom JS -->
  <script src="/js/script.js"></script>
</body>
</html>